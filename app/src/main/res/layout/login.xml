<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/loginArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        tools:ignore="UselessParent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:clickable="false"
            android:elevation="50dp"
            android:minHeight="?attr/actionBarSize"
            android:saveEnabled="false"
            android:theme="?attr/actionBarTheme"
            app:title="PetShop Boyz"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Large"
            app:titleTextColor="#FFFFFF"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/pink_primary_variant"
            app:cardCornerRadius="10dp">


            <TextView
                android:id="@+id/usuarioText"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:text="@string/usu_rio"
                android:textAlignment="center" />


            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_weight="5"
                android:ems="10"
                android:inputType="textPersonName"
                android:textFontWeight="@integer/material_motion_duration_short_2"
                android:autofillHints=""
                tools:ignore="LabelFor"
                tools:targetApi="p" />


            <TextView
                android:id="@+id/senhaText"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120dp"
                android:text="@string/senha"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="145dp"
                android:layout_weight="5"
                android:ems="10"
                android:inputType="textPassword"
                android:autofillHints=""
                tools:ignore="LabelFor" />

            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="105dp"
                android:layout_marginTop="210dp"
                android:layout_weight="5"
                android:text="@string/login" />



        </androidx.cardview.widget.CardView>


    </FrameLayout>


</LinearLayout>